<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-border-radius: 25; -fx-background-radius: 25; -fx-background-color: white;"
            xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <!-- Stylesheet -->
    <stylesheets>
        <URL value="@../css/addclass.css"/>
    </stylesheets>
    <AnchorPane layoutY="50.0" opacity="0.2" prefHeight="350.0" prefWidth="600.0" style="-fx-background-color: #ccc;"/>
    <!-- Header Section -->
    <AnchorPane layoutX="14.0" layoutY="14.0" prefHeight="37.0" prefWidth="36.0"
                style="-fx-background-radius: 10; -fx-background-color: #14d7f4;">
        <Circle fill="#85f1ff" layoutX="18.0" layoutY="19.0" radius="13.0" stroke="#14d7f5" strokeType="INSIDE"/>
        <Label layoutX="10.0" layoutY="10.0" text="C" style="-fx-text-fill: white;">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
    </AnchorPane>
    <!-- Header Label -->
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="56.0" layoutY="17.0" prefHeight="31.0" prefWidth="182.0"
           text="UPDATE CLASS">
        <font>
            <Font size="21.0"/>
        </font>
    </Label>
    <!-- Close Button -->
    <Circle fx:id="circle" fill="#f7070c" layoutX="565.0" layoutY="17.0" onMouseClicked="#closeForm" radius="6.0"
            stroke="#f7070c" strokeType="INSIDE"/>

    <!-- Form Fields -->
    <!-- Class Name -->
    <Label fx:id="classNameLabel" layoutX="21.0" layoutY="80.0" text="Class Name"/>
    <TextField fx:id="classNameField" layoutX="21.0" layoutY="106.0" prefHeight="25.0" prefWidth="250.0"
               style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc;"/>

    <!-- Instructor -->
    <Label fx:id="instructorLabel" layoutX="21.0" layoutY="144.0" text="Instructor"/>
    <ComboBox fx:id="instructorComboBox" layoutX="21.0" layoutY="170.0" prefHeight="25.0" prefWidth="250.0"
              style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc;"/>

    <!-- Schedule -->
    <Label fx:id="scheduleLabel" layoutX="21.0" layoutY="209.0" text="Schedule"/>
    <TextField fx:id="scheduleField" layoutX="21.0" layoutY="235.0" prefHeight="25.0" prefWidth="250.0"
               style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc;"/>

    <!-- Capacity -->
    <Label fx:id="capacityLabel" layoutX="21.0" layoutY="274.0" text="Capacity"/>
    <TextField fx:id="capacityField" layoutX="21.0" layoutY="300.0" prefHeight="25.0" prefWidth="100.0"
               style="-fx-background-color: #f4f4f4; -fx-border-color: #ccc;"/>

    <!-- Save Button -->
    <Button fx:id="buttonUpdate" layoutX="513.0" layoutY="353.0" mnemonicParsing="false" onMouseClicked="#saveUpdate"
            prefHeight="32.0" prefWidth="75.0"
            style="-fx-background-color: #1e90ff; -fx-text-fill: white; -fx-border-radius: 5px;" text="Save">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
</AnchorPane>
